- content_for :meta do
  %meta{:"http-equiv" => "refresh", "content" => "15"}
%h3 Highscore
%table.table
  %thead
    %tr
      %th Team
      %th Score
      %th Solved Holes
  %tbody
    - @highscore.each do |user|
      %tr
        %td= link_to user.name || user.email, user
        %td= user.score
        %td= user.solved

%h3 Holes
%table.table
  %thead
    %tr
      %th Hole
      %th Team
      %th Spent Characters
      %th Score
  %tbody
    - @holes.each do |test, results|
      - results.each do |result|
        - if result == results.first || result.solved?
          %tr
            %td= test if result == results.first
            - if result.solved?
              %td= link_to(result.user.name || result.user.email, result.user)
              %td= result.size
              %td= result.score
            - else
              %td -
              %td -
              %td -
